# ===========================================
# Vertex AI Agent Engine 배포 환경설정 템플릿
# ===========================================
# 이 파일을 .env로 복사하고 실제 값을 입력하세요

# ============================================
# Google Cloud 프로젝트 기본 설정
# ============================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ============================================
# Agent Engine 배포 설정 
# ============================================
# 지원 지역: us-central1, us-east1, us-west1, europe-west1, asia-northeast1
AGENT_ENGINE_LOCATION=us-central1
STAGING_BUCKET_NAME=your-project-id-agent-staging

# 배포 환경: development, staging, production
DEPLOYMENT_ENVIRONMENT=development

# ============================================
# AI 모델 API 설정
# ============================================
# Google AI Studio 사용하는 경우 (로컬 개발용)
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GOOGLE_API_KEY=your-google-ai-studio-api-key

# Vertex AI 사용하는 경우 (프로덕션 배포시)
# GOOGLE_GENAI_USE_VERTEXAI=TRUE
# GOOGLE_CLOUD_LOCATION=us-central1

# ============================================
# Firebase 설정 (Cloud Secret Manager 권장)
# ============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ============================================
# 배포 메타데이터 설정
# ============================================
AGENT_DISPLAY_NAME=인테리어 멀티 에이전트
AGENT_DESCRIPTION=Firebase 연동된 인테리어 프로젝트 관리 AI 에이전트
AGENT_VERSION=1.0.0

# ============================================
# 모니터링 및 로깅 설정
# ============================================
ENABLE_CLOUD_TRACE=true
ENABLE_CLOUD_LOGGING=true
LOG_LEVEL=INFO

# ============================================
# 배포 안전 설정
# ============================================
# UUID를 사용한 고유 배포 ID (충돌 방지)
# 실행시 자동 생성됨 - 수동 입력 불필요
# DEPLOYMENT_UUID=auto-generated

# 기존 배포 덮어쓰기 허용 여부
ALLOW_OVERWRITE_DEPLOYMENT=false 